<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newlecture.web.dao.MemberDao">
	<insert id="insert" parameterType="com.newlecture.web.entity.Member">
		insert into Member(id, name, pwd, email)
		values(#{id}, #{name}, #{pwd}, #{email})
	</insert>
	<update id="update" parameterType="com.newlecture.web.entity.Member">
		update [Member]
		set 
			 [name] = #{name}
		     , [email] = #{email}
		     , [pwd] = #{pwd}
		 where id = #{id}
	</update>
	<delete id="delete" parameterType="String">
		delete from Member where id = #{param1}
	</delete>
	<select id="get" resultType="com.newlecture.web.entity.Member">
		select * from Member where id = #{param1}
	</select>
	<select id="getList" resultType="com.newlecture.web.entity.Member">
		select * from member
		where ${param1} like '%${param2}%'
		order by regDate desc
		offset #{(param3-1)*10} rows
		fetch next 10 rows only
	</select>
	
	<select id="getByEmail" resultType="com.newlecture.web.entity.Member">
		select * from Member where email = #{param1}
	</select>
	
	<select id="getById" resultType="com.newlecture.web.entity.Member">
		select * from Member where id = #{param1}
	</select>
	
	
	
	
</mapper>