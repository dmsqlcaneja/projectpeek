		<intercept-url pattern="/teacher/**" access="hasRole('ROLE_TEACHER')" />
	</http>
	
	<authentication-manager>
		<authentication-provider>
			<!-- 인증 유저 정보 제공 (크게 3가지로 지정 가능 1. 직접 (인메모리) 설정 2.DB이용 3.서버 사용자 정보를 꺼내오는  -->
			<password-encoder hash="bcrypt" />		
			<user-service>
